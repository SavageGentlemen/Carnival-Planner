rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /promoAds/{allPaths=**} {
      // Anyone can read promo ads (for displaying to free users)
      allow read: if true;
      // Only admin can upload/delete ads
      allow write: if request.auth != null && request.auth.token.email == 'djkrss1@gmail.com';
    }
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
