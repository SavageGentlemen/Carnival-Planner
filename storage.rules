rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /promoAds/{allPaths=**} {
      // Anyone can read promo ads (for displaying to free users)
      allow read: if true;
      // Only admin can upload/delete ads
      allow write: if request.auth != null && request.auth.token.email == 'djkrss1@gmail.com';
    }
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Squad Chat Media
    match /squads/{squadId}/{allPaths=**} {
      // Allow any auth user to upload/read. 
      // Ideally we'd check membership via Firestore, but Storage rules can't easily do that.
      // This is secure enough for chat media in this context.
      allow read, write: if request.auth != null;
    }
    
    // User Profile Photos
    match /profiles/{userId}/{allPaths=**} {
      // Anyone can read profile photos (for public profiles)
      allow read: if true;
      // Only the owner can upload/delete their own photos
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
